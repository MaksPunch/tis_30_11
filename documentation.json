{
  "openapi": "3.0.0",
  "info": {
    "title": "home-book-api",
    "description": "The API of Library service",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Library service by MaksPunch"
    }
  ],
  "paths": {
    "/api/book": {
      "get": {
        "tags": [
          "Book"
        ],
        "description": "returns all registered books",
        "operationId": "getBooks",
        "responses": {
          "200": {
            "description": "All the books",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "object",
                    "example": "{\"id\":0,\"name\":\"Дом в лазурном море\",\"author\":\"Ти Джей Клун\",\"realese\":\"2022\",\"owner\":[{\"id\":0,\"name\":\"Тарасов Максим\",\"datein\":\"04.05.2006\",\"dateout\":\"06.05.2006\"}],\"search_tags\":[\"Сверхъестественное\",\"Американские писатели\",\"Фэнтези 18+\"]}"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Book"
        ],
        "operationId": "add a book",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/book"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "book added successfully"
          },
          "400": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Access denied. Not authorized"
          }
        }
      }
    },
    "/api/book/id": {
      "get": {
        "tags": [
          "Book"
        ],
        "description": "returns one book by id",
        "operationId": "getBook",
        "responses": {
          "200": {
            "description": "All the books",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/book"
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Access denied. Not authorized"
          },
          "404": {
            "description": "A book with the specified ID was not found"
          }
        }
      },
      "put": {
        "tags": [
          "Book"
        ],
        "operationId": "updateBook",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/book"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "book updated successfully"
          },
          "400": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Access denied. Not authorized"
          },
          "404": {
            "description": "A book with the specified ID was not found"
          }
        }
      },
      "delete": {
        "tags": [
          "Book"
        ],
        "operationId": "deleteBook",
        "responses": {
          "200": {
            "description": "book deleted successfully"
          },
          "400": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Access denied. Not authorized or Not Admin"
          },
          "404": {
            "description": "A book with the specified ID was not found"
          }
        }
      }
    },
    "/api/signUp": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "operationId": "singUp",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/authorization"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Account created sucessfully"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Authorization information is missing or invalid."
          }
        }
      }
    },
    "/api/logIn": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "operationId": "logIn",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/authorization"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logged in successfully"
          },
          "401": {
            "description": "Authorization information is missing or invalid"
          }
        }
      }
    },
    "/api/refreshToken": {
      "post": {
        "tags": [
          "Refresh Access Token"
        ],
        "operationId": "refreshAccessToken",
        "responses": {
          "200": {
            "description": "Access token created successfully"
          },
          "400": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Access denied. Not authorized"
          }
        }
      }
    },
    "/api/refreshToken/logout": {
      "post": {
        "tags": [
          "LogOut"
        ],
        "operationId": "logout",
        "responses": {
          "200": {
            "description": "Logged out successfully"
          },
          "400": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Access denied. Not authorized"
          }
        }
      }
    },
    "/api/profile": {
      "get": {
        "tags": [
          "Profile"
        ],
        "operationId": "getProfile",
        "responses": {
          "200": {
            "description": "Get User Info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200"
                }
              }
            }
          },
          "400": {
            "description": "Invalid token"
          },
          "403": {
            "description": "Access denied. Not authorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "book": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Под Шепчущей Дверью"
          },
          "author": {
            "type": "string",
            "example": "Ти Джей Клун"
          },
          "realese": {
            "type": "string",
            "example": "2022"
          },
          "search_tags": {
            "type": "array",
            "example": [
              "Фентези",
              "Ужасы"
            ],
            "items": {
              "type": "string"
            }
          }
        }
      },
      "authorization": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "makspunch"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "maks.punch@yandex.ru"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "123456"
          }
        }
      },
      "inline_response_200": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "makspunch"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "maks.punch@yandex.ru"
          },
          "roles": {
            "type": "string",
            "example": "admin"
          },
          "uid": {
            "type": "integer",
            "example": 1
          }
        }
      }
    }
  }
}